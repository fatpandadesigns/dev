[user]
	name = <%= node['teracy-dev']['git']['user']['name'] %>
	email = <%= node['teracy-dev']['git']['user']['email'] %>

<% if node['teracy-dev']['git']['color'] %>
[color]
	ui = true
<% end %>

<% if not node['teracy-dev']['git']['core']['filemode'] %>
[core]
        filemode = false
<% end %>


<% if node['teracy-dev']['git']['commit']['template'] %>
[commit]
	template = /home/vagrant/.gitmessage.txt
<% end %>

[diff]
	tool = <%= node['teracy-dev']['git']['diff']['tool'] %>

[merge]
	tool = <%= node['teracy-dev']['git']['merge']['tool'] %>

<% if !node['teracy-dev']['git']['difftool']['prompt'] %>
[difftool]
	prompt = false
<% end %>
